{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="text-muted h4 m-3">
        {{ 'title.category_details'|trans({'%id%' : category.id | default('')}) }}
    </div>
    {% if category is defined and category|length %}
        <div class="flex">
            <div class="m-4 mt-3">
                <dt>{{ 'label.category'|trans }}</dt>
                <h2><dd>{{  category.title }}</dd></h2>
            </div>
            <div class="m-4 mt-3 mb-2">
                <dt>{{ 'label.created_at'|trans }}</dt>
                <dd>{{ category.createdAt|format_date('long') }}</dd>
            </div>
        <div class="m-4 mt-2 mb-3">
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
        </div>
        </div>
        <div class="d-flex flex-column align-items-start">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a href="{{ url('category_index') }}" class="btn btn-outline-secondary" title="{{ 'action.back_to_list'|trans }}">
                        {{ 'action.back_to_list'|trans }}
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="{{ url('book_index', {categoryId: category.id}) }}" class="btn btn-outline-primary">
                        {{ 'action.category_book_list'|trans }}
                    </a>
                </li>
            </ul>
        </div>
    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            }
            %}
        </p>
    {% endif %}
{% endblock %}